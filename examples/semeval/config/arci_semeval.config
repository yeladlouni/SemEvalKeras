{
  "net_name": "ARCI",
  "global":{
      "model_type": "PY",
      "weights_file": "examples/semeval/weights/arci.semeval.weights",
      "save_weights_iters": 10,
      "num_iters": 400,
      "display_interval": 10,
      "test_weights_iters": 400,
      "optimizer": "adam",
      "learning_rate": 0.0001
  },
  "inputs": {
    "share": {
        "text1_corpus": "./data/SemEval/corpus_preprocessed.txt",
        "text2_corpus": "./data/SemEval/corpus_preprocessed.txt",
        "use_dpool": false,
        "embed_size": 128,
        "embed_path": "./data/SemEval/embed_word2vec_d128_norm",
        "vocab_size": 38515,
        "train_embed": false,
        "target_mode": "ranking",
        "text1_maxlen": 20,
        "text2_maxlen": 40
    },
    "train": {
        "input_type": "PairGenerator", 
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 50,
        "batch_per_iter": 5,
        "batch_size": 100,
        "relation_file": "./data/SemEval/relation_train.txt"
    },
    "valid": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/SemEval/relation_valid.txt"
    },
    "test": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/SemEval/relation_test.txt"
    },
    "predict": {
        "input_type": "ListGenerator", 
        "phase": "PREDICT",
        "batch_list": 10,
        "relation_file": "./data/SemEval/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "SEMEVAL",
      "save_dir": "./examples/semeval/output/"
    }
  },
  "model": {
    "model_path": "./matchzoo/models/",
    "model_py": "arci.ARCI",
    "setting": {
        "kernel_count": 128,
        "kernel_size": 3,
        "q_pool_size": 4,
        "d_pool_size": 4,
        "dropout_rate": 0.95
    }
  },
  "losses": [ 
    {
       "object_name": "rank_hinge_loss",
       "object_params": { "margin": 1.0 }
    }
  ],
  "metrics": [ "ndcg@3", "ndcg@5", "map" ]
}

