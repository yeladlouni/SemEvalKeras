{
  "net_name": "ANMM",
  "global":{
      "model_type": "PY",
      "weights_file": "examples/SemEval/weights/anmm.semeval.weights",
      "save_weights_iters": 10,
      "num_iters": 400,
      "display_interval": 10,
      "test_weights_iters": 400,
      "optimizer": "adadelta",
      "learning_rate": 0.0001
  },
  "inputs": {
    "share": {
        "text1_corpus": "./data/SemEval/corpus_preprocessed.txt",
        "text2_corpus": "./data/SemEval/corpus_preprocessed.txt",
        "use_dpool": false,
        "embed_size": 128,
        "embed_path": "./data/SemEval/embed.idf",
        "vocab_size": 88741,
        "train_embed": false,
        "target_mode": "ranking",
        "bin_num": 20,
        "text1_maxlen": 200,
        "text2_maxlen": 200
    },
    "train": {
        "input_type": "DRMM_PairGenerator",
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 50,
        "batch_per_iter": 5,
        "batch_size": 100,
        "relation_file": "./data/SemEval/relation_train.txt",
        "hist_feats_file": "./data/SemEval/relation_train.binsum-20.txt"
    },
    "valid": {
        "input_type": "DRMM_ListGenerator",
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/SemEval/relation_valid.txt",
        "hist_feats_file": "./data/SemEval/relation_valid.binsum-20.txt"
    },
    "test": {
        "input_type": "DRMM_ListGenerator",
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/SemEval/relation_test.txt",
        "hist_feats_file": "./data/SemEval/relation_test.binsum-20.txt"
    },
    "predict": {
        "input_type": "DRMM_ListGenerator",
        "phase": "PREDICT",
        "batch_list": 10,
        "relation_file": "./data/SemEval/relation_predict.txt",
        "hist_feats_file": "./data/SemEval/relation_predict.binsum-20.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "SEMEVAL",
      "save_dir": "./examples/semeval/output/"
    }
  },
  "model": {
    "model_path": "./matchzoo/models/",
    "model_py": "anmm.ANMM",
    "setting": {
        "num_layers": 5,
        "hidden_sizes": [256, 128, 64, 32, 1],
	    "dropout_rate": 0.0
    }
  },
  "losses": [
    {
       "object_name": "rank_hinge_loss" ,
       "object_params": {
            "margin": 1.0
       }
    }
  ],
  "metrics": [ "ndcg@3", "ndcg@5", "map" ]
}

