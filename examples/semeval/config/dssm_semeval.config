{
  "net_name": "DSSM",
  "global":{
      "model_type": "PY",
      "weights_file": "examples/semeval/weights/dssm.semeval.weights",
      "save_weights_iters": 10,
      "num_iters": 100,
      "display_interval": 10,
      "test_weights_iters": 100,
      "optimizer": "adam",
      "learning_rate": 0.01
  },
  "inputs": {
    "share": {
        "text1_corpus": "./data/semeval/corpus_preprocessed.txt",
        "text2_corpus": "./data/semeval/corpus_preprocessed.txt",
        "word_triletter_map_file": "./data/semeval/word_triletter_map.txt",
        "target_mode": "ranking",
        "vocab_size": 69414,
        "embed_size": 1
    },
    "train": {
        "input_type": "Triletter_PairGenerator", 
        "dtype": "dssm",
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 50,
        "batch_per_iter": 5,
        "batch_size": 100,
        "relation_file": "./data/semeval/relation_train.txt"
    },
    "valid": {
        "input_type": "Triletter_ListGenerator", 
        "dtype": "dssm",
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/semeval/relation_valid.txt"
    },
    "test": {
        "input_type": "Triletter_ListGenerator", 
        "dtype": "dssm",
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/semeval/relation_test.txt"
    },
    "predict": {
        "input_type": "Triletter_ListGenerator", 
        "dtype": "dssm",
        "phase": "PREDICT",
        "batch_list": 10,
        "relation_file": "./data/semeval/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "SEMEVAL",
      "save_dir": "./examples/semeval/output/"
    }
  },
  "model": {
    "model_path": "./matchzoo/models/",
    "model_py": "dssm.DSSM",
    "setting": {
        "hidden_sizes": [32],
        "dropout_rate": 0.2
    }
  },
  "losses": [ 
    {
       "object_name": "rank_hinge_loss" ,
       "object_params": {
            "margin": 1.0
       }
    }
  ],
  "metrics": [ "ndcg@3", "ndcg@5", "map" ]
}

